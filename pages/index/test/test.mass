.category{
    display: flex;
    flex-direction: column;
    width: 100%;
    height: 200px;
    background-color: black;
    background-image: "../../../res/images/diamonds_1.png";
    justify-content: center;
    align-items: center;
}

.category_icon{
    height: 120px;
    width: 120px;
}

.category_title{
color: white;
font-size: 24px;
}

.sub_category_container{
    display: flex;
    flex-wrap: wrap;
    flex-direction: row;
    width: 100%;
    justify-content: space-evenly;
    padding-top: 5%;
    /* margin-top: -10% */
    /* background-color: aqua; */
}

.sub_caegory_item{
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    background-color: white;
    width: 45%;
    height: 150px;
    border-radius: 5px;
    gap: 1px;
    margin-top: 5px;
    margin: 5px;
}

.sub_category_icon{
    height: 50px;
    width: 50px;
    background-color: red;
    border-radius: 5px;
    margin-bottom: 10px;
}

.loader{
    display: flex;
    justify-content: center;
    align-items: center;
    margin-top: 20px;
}